{
    "compilerOptions": {
        "strict": true,
        // EMIT
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "declarationDir": "dist/typings",
        // MODULES
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        // LANG & ENV
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "ESnext", "ES2021", "DOM"
        ],
        "target": "ES2021",
        "useDefineForClassFields": true,
    },
    // EXCLUDE
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}